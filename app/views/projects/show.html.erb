<% provide(:title, @project.title) %>

<div class="container mt-5">
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title"><%= @project.title %></h2>
      <p class="card-text"><%= @project.description %></p>
      <p class="text-muted small">Owner: <strong><%= @project.user.full_names %></strong></p>
      <%= link_to 'Back to Projects', projects_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <%= render "issues/form", project: @project, issue: Issue.new %>

  <%= render "issues/kanban", project: @project %>
</div>

<div class="container mt-5">
  <h2 class="mb-4">Issue Report by Project (<%= @project.title %>)</h2>

  <div class="row">
    <div class="col-md-6">
      <h5>Pie Chart</h5>
      <%= pie_chart @project_issues, library: {title: "Issues per Status"} %>
    </div>

    <div class="col-md-6">
      <h5>Bar Chart</h5>
      <%= column_chart @project_issues, library: {title: "Issues per Status"} %>
    </div>
  </div>
</div>