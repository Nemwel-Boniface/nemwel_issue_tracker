<% provide(:title, "Issue Reports") %>

<div class="container mt-5">
  <h2 class="mb-4">Issue Report by Status</h2>

  <div class="row">
    <div class="col-md-6">
      <h5>Pie Chart</h5>
      <%= pie_chart @issues_by_status, library: {title: "Issues per Status"} %>
    </div>

    <div class="col-md-6">
      <h5>Bar Chart</h5>
      <%= column_chart @issues_by_status, library: {title: "Issues per Status"} %>
    </div>
  </div>
</div>
