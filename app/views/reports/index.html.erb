<% provide(:title, "Issue Reports") %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Issue Report by Status</h2>
    <%= link_to "Export Project Issues - PDF", project_issues_pdf_export_path(format: :pdf), class: "btn btn-outline-success", target: "_blank" %>
    <%= link_to "Export Project Issues - Excel", project_issues_export_path(format: :xlsx), class: "btn btn-outline-success" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h5>Pie Chart</h5>
      <%= pie_chart @issues_by_status, library: {title: "Issues per Status"} %>
    </div>

    <div class="col-md-6">
      <h5>Bar Chart</h5>
      <%= column_chart @issues_by_status, library: {title: "Issues per Status"} %>
    </div>
  </div>
</div>
